server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /usr/share/readsb/html;
    index index.html;
    server_name _;


    location /radar/data {
        alias /run/readsb/;
        add_header 'Access-Control-Allow-Origin' '*';
        access_log on;
    }

    location /radar {
        alias /usr/share/readsb/html/;
    }

    location /graphs/images {
        alias /run/readsb/;
    }

    location /graphs {
        alias /usr/share/readsb/html/graphs/;
    }

    location /data {
        add_header 'Access-Control-Allow-Origin' '*';
        alias /run/readsb/;
        access_log on;
    }

    location / {
        try_files $uri $uri/ =404;
    }
}

